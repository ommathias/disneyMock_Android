<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"

    tools:context=".PerfilEscolhido">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/logoDisney"
        android:layout_width="113dp"
        android:layout_height="43dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/disney_white"
        app:layout_constraintBottom_toTopOf="@+id/mainMovie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedCornerImage" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/mainMovie"
        android:layout_width="wrap_content"
        android:layout_height="206dp"
        android:layout_marginTop="55dp"
        android:scaleType="centerCrop"
        android:src="@drawable/capa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedCornerImage" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/voltar"
        android:layout_width="35dp"
        android:layout_height="23dp"

        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedCornerImage" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/mirror"
        android:layout_width="40dp"
        android:layout_height="23dp"

        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_mirroring_screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedCornerImage" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="325dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/movie1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/img0"
            app:shapeAppearanceOverlay="@style/RoundedCornerImage" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/movie2"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/img1"
            app:shapeAppearanceOverlay="@style/RoundedCornerImage" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/movie3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/img2"
            app:shapeAppearanceOverlay="@style/RoundedCornerImage" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="530dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/movie4"
            android:layout_width="0dp"
            android:layout_height="174dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/img3"
            app:shapeAppearanceOverlay="@style/RoundedCornerImage" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/movie5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/img4"
            app:shapeAppearanceOverlay="@style/RoundedCornerImage" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/movie6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/img5"
            app:shapeAppearanceOverlay="@style/RoundedCornerImage" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>